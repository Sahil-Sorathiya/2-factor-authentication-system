<%- include('./partials/header') %>

    <!--? Register Form -->
    <div class="container" style="height: 80vh;">
        <div class="text-center mt-3 mb-3"><h1 class="d-inline-block">Register</h1></div>
        <div class="row justify-content-center">
            <div class="col-11 col-sm-10 col-md-8 col-lg-6">
                <form action="/action_page.js" method="post">
                    <!-- email -->
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <!-- username -->
                    <div class="mb-3">
                        <label for="exampleInputUsername" class="form-label">Username</label>
                        <input type="text" class="form-control" id="exampleInputUsername" aria-describedby="emailHelp">
                        <div id="usernameHelp" class="form-text">Username must only contain 0-9, a-z, A-Z and _(underscore).</div>
                    </div>
                    <!-- password -->
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <input type="password" id="exampleInputPassword1" class="form-control"
                            aria-describedby="passwordHelpBlock">
                        <div id="passwordHelpBlock" class="form-text">
                            Your password must be 8-20 characters long, contain letters and numbers, and must not
                            contain spaces, special characters, or emoji.
                        </div>
                    </div>
                    <!-- checkbox -->
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">By checking this you accept our <a
                                href="/policy" class="text-decoration-none""> <strong>
                                    Privacy-policy</strong></a></label>
                    </div>
                    <!-- submit btn -->
                    <button type="submit" class="btn shadow-none"
                        style="background-color: #6610f2; color: #ffffff;">Submit</button>

                </form>
            </div>
        </div>
    </div>

<%- include('./partials/footer') %>