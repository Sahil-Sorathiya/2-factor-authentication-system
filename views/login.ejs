                    <div class="mb-3">
                        <label for="exampleInputUsername" class="form-label">Username</label>
                        <input type="text" class="form-control" id="exampleInputUsername" aria-describedby="emailHelp">
                    </div>
                    <!-- password -->
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <input type="password" id="exampleInputPassword1" class="form-control"
                            aria-describedby="passwordHelpBlock">
                    </div>
                    <!-- Forgot Password -->
                    <div class="mb-3">
                        <a href="/forgotpassword" class="text-decoration-none""> <strong>Forgot Password?</strong></a></label>
                    </div>
                <!-- submit btn -->
                <button type=" submit" class="btn shadow-none"
                            style="background-color: #6610f2; color: #ffffff;">Login</button>

                </form>
            </div>
        </div>
    </div>

